<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/prv/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/actionBarFrm"
        android:layout_width="match_parent"
        android:layout_height="48dip"
        android:background="@drawable/btn_buy_r_pressed" >
        <ImageView
            android:id="@+id/appIcon"
            android:layout_width="38dip"
            android:layout_height="38dip"
            android:layout_marginLeft="15dip"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon" />
        <TextView
            android:id="@+id/appTitle"
            android:layout_width="wrap_content"
            android:layout_height="38dip"
            android:layout_marginLeft="5dip"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:text="@string/app_name" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:layout_weight="1.0"
        android:background="@drawable/chat_userinfo_popup_bg"
        android:orientation="vertical" >

        <com.fzh.game.view.Game24View
            android:id="@+id/gameView"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />
    </LinearLayout>

    <com.fzh.game.view.Game24AnswerView
        android:id="@+id/answerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone" />

    <LinearLayout
        android:id="@+id/actionMenuFrm"
        android:layout_width="match_parent"
        android:layout_height="52dip"
        android:background="@drawable/btn_buy_l_pressed" >

        <ImageView
            android:id="@+id/exitApp"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/exit_2" />
        <ImageView
            android:id="@+id/preQuestion"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/pre_0" />
        <ImageView
            android:id="@+id/resetQuestion"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/reset_0" />
        <ImageView
            android:id="@+id/nextQuestion"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/next_0" />
        <ImageView
            android:id="@+id/moreSetting"
            android:layout_width="match_parent"
            android:layout_height="40dip"
            android:layout_weight="1"
            android:layout_gravity="center_vertical"
            android:src="@drawable/pre_0" />
    </LinearLayout>

</LinearLayout>